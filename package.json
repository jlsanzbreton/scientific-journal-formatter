{
  "name": "scientific-journal-formatter",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "SciForm – PWA para maquetar artículos científicos a plantillas de revista.",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 4173",
    "icons": "node scripts/generate-icons.mjs",
    "check:node": "node -e \"console.log(process.version)\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "happy-dom": "^20.0.8",
    "prettier": "^3.6.2",
    "sharp": "^0.33.4",
    "typescript": "^5.9.3",
    "vite": "^6.0.0",
    "vitest": "^4.0.2"
  },
  "browserslist": [
    "defaults",
    "not op_mini all"
  ],
  "dependencies": {
    "ajv": "^8.17.1",
    "dompurify": "^3.3.0",
    "marked": "^16.4.1"
  }
}
