{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "src/**/*",
    "scripts/**/*.mjs",
    "vite.config.js",
    "vitest.config.js",
    "eslint.config.js"
  ],
  "exclude": ["dist", "node_modules"]
}
